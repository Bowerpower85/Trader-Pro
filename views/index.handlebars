<div class="row" id="burgerRow">
{{!-- Change this div to delete stocks. --}}
  <div class="col-md-4" id="notDevoured">
    <ul>
      {{#each burgers}} {{#unless this.devoured}}
      <li>
        <p>
          {{this.id}}. {{this.burger_name}}

          <button data-burgerid="{{this.id}}" class="btn btn-info devourbtn">Devour Burger!</button>
        </p>
      </li>
      {{/unless}} {{/each}}
    </ul>
  </div>

  <div class="col-md-4 text-center" id="stockSearchDiv">
{{!-- Need to create dropdown for stock list. --}}
{{!-- Client must be able to search by shortname or symbol --}}
    <h2>Search for Stocks</h2>
    <form id="createBurgerForm" class="button-size">
      <textarea type="text" name="Stock finder" id="stockFinder"></textarea>
      <br>
      {{!-- The Search button  is unrelated to event starting at line 46. --}}
      <button class="btn btn-danger" type="submit">Search</button>
      <br> 
      <button class="btn btn-danger" type="submit">Save Stock</button>
    </form>
  </div>
{{!-- May not need the is DIV because we want to delete unwatched stocks. --}}
  <div class="col-md-4" id="devoured">
    <ul>
      {{#each burgers}} {{#if this.devoured}}
      <li>
        <p>
          {{this.id}}. {{this.burger_name}}
        </p>
      </li>
      {{/if}} {{/each}}
    </ul>
  </div>

</div>

<script type="text/javascript">
  $("#createBurgerForm").on("submit", function (event) {
    
    event.preventDefault();
    var newStock = {
      stock_name: $("#addStock").val().trim()
    };
    
    $.ajax("/watchlist/insert", {
      type: "POST",
      data: newStock
    }).then(
      function () {
        console.log("New Stock added to Watch List");
        
        location.reload();
      }
    );
  });
  $(".devourbtn").on("click", function (event) {
    
    event.preventDefault();
    var id = $(this).data("stockid");
    console.log(id);
    // Send the PUT request.
    $.ajax({
      method: "DELETE",
      url: "/watchlist/" + id
    }).then(
      function () {
        console.log("deleted stock ", id);
        location.reload();
      }
    );
  });
</script>